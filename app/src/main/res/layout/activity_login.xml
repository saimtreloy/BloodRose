<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:gravity="center"
    tools:context="com.saim.bloodrose.Activity.LoginActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:gravity="center"
        android:orientation="vertical"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#DDFFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="46dp"
            android:layout_marginBottom="46dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgLoginLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_logo"/>
            <TextView
                android:id="@+id/txtLoginLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imgLoginLogo"
                android:textStyle="bold"
                android:text="Blood Rose"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_below="@id/txtLoginLogo">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14dp"
                        android:textAllCaps="false"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/imgLoginLogo"
                        android:text="Sign in to "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14dp"
                        android:textAllCaps="false"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/imgLoginLogo"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="save life"/>

                </LinearLayout>


                <EditText
                    android:id="@+id/inputLoginEmailOrMobile"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="6dp"
                    android:hint="Email or Mobile"
                    android:textSize="12dp"
                    android:background="@drawable/ic_round"/>

                <EditText
                    android:id="@+id/inputLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="6dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="12dp"
                    android:background="@drawable/ic_round"/>

                <TextView
                    android:id="@+id/txtLoginForgetPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Forget passowrd?"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="12dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btnLoginLogin"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="LOG IN"
                    android:textColor="#FFF"
                    android:background="@drawable/ic_round_button"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textAllCaps="false"
                        android:text="Not you in the league of saviours? "/>

                    <TextView
                        android:id="@+id/txtLoginSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="italic"
                        android:text="Sign up here"/>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#DDFFFFFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgRegLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_round_reg_logo"
                    android:src="@drawable/ic_person"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_below="@id/imgRegLogo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="14dp"
                            android:textAllCaps="false"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/imgLoginLogo"
                            android:text="Sign up to "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="14dp"
                            android:textAllCaps="false"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/imgLoginLogo"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:text="save life"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/inputRegFullName"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:hint="Full Name"
                        android:textSize="12dp"
                        android:background="@drawable/ic_round"/>

                    <EditText
                        android:id="@+id/inputRegEmail"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:hint="Email"
                        android:textSize="12dp"
                        android:background="@drawable/ic_round"/>

                    <EditText
                        android:id="@+id/inputRegMobile"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:hint="Mobile"
                        android:inputType="phone"
                        android:textSize="12dp"
                        android:background="@drawable/ic_round"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_weight="1"
                            android:id="@+id/inputRegBDate"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="3dp"
                            android:hint="Birthday"
                            android:inputType="phone"
                            android:textSize="12dp"
                            android:focusable="false"
                            android:background="@drawable/ic_round"/>

                        <EditText
                            android:id="@+id/inputRegGroup"
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:hint="Group"
                            android:focusable="false"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:inputType="phone"
                            android:textSize="12dp"
                            android:background="@drawable/ic_round"/>


                    </LinearLayout>

                    <EditText
                        android:id="@+id/inputRegAddress"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:hint="Location"
                        android:inputType="phone"
                        android:textSize="12dp"
                        android:focusable="false"
                        android:background="@drawable/ic_round"/>

                    <EditText
                        android:id="@+id/inputRegLastDonateDate"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:hint="Last Donate Date"
                        android:inputType="phone"
                        android:textSize="12dp"
                        android:focusable="false"
                        android:background="@drawable/ic_round"/>

                    <EditText
                        android:id="@+id/inputRegPassword"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:hint="Password"
                        android:textSize="12dp"
                        android:background="@drawable/ic_round"/>

                    <Button
                        android:id="@+id/btnRegSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textColor="#FFF"
                        android:background="@drawable/ic_round_button"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textAllCaps="false"
                            android:text="Already registered? "/>

                        <TextView
                            android:id="@+id/txtRegSignin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="italic"
                            android:text="Sign in here"/>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
